{
  "compilerOptions": {
    /* ===== Runtime ===== */
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "Node16",
    "moduleResolution": "Node16",

    /* ===== Output ===== */
    "outDir": "dist",

    /* ===== Interop ===== */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* ===== REQUIRED FOR HARDHAT ARTIFACT JSON ===== */
    "resolveJsonModule": true,

    /* ===== Quality of life (prevents script blocking) ===== */
    "skipLibCheck": true,
    "strict": false,

    /* ===== Node friendliness ===== */
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "scripts",
    "typechain-types",
    "hardhat.config.ts"
  ]
}
